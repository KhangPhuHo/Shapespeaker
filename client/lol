        function updateUserCredentials2(userInfo) {
          let storedUser = JSON.parse(localStorage.getItem('user'));
      
          if (storedUser) {
              storedUser.username = userInfo.name;
              storedUser.avatar = userInfo.avatar;
              localStorage.setItem('user', JSON.stringify(storedUser));
          }
      }

      localStorage.setItem('user', JSON.stringify(user));

      async function fetchData() {
        const url = 'https://hapi-books.p.rapidapi.com/nominees/romance/2020';
        fetch(url)
        .then(res => res.json())
        .then((data) => {
          console.log(data)
        })
        const options = {
          method: 'GET',
          headers: {
            'x-rapidapi-key': '7740f95f87msh0e48659a904c3a1p1f9b96jsnb35e195687bf',
            'x-rapidapi-host': 'hapi-books.p.rapidapi.com'
          }
        };
      }

      function displayBooks(data) {
        const container = document.getElementById("Market");
        container.innerHTML = ''; // Xóa nội dung cũ trong container
        data.forEach(book => {
          const bookDiv = document.createElement('div');
          bookDiv.classList.add('book');
      
          // Tạo cấu trúc HTML cho mỗi cuốn sách
          bookDiv.innerHTML = `
          <img src="${book.cover}" alt="${book.name}">
          <h3> <span>${book.name}</span></h3>
      `;
          bookDiv.setAttribute('data-cover', book.cover);
          bookDiv.setAttribute('data-name', book.name);
          bookDiv.setAttribute('data-author', book.author);
          bookDiv.setAttribute('data-votes', book.votes);
          bookDiv.setAttribute('data-url', book.url);
          container.appendChild(bookDiv);
        });
      }




      
