    function addPopup(book) {
        const popupContainer = document.querySelector('.popup-container')
        const popup = document.querySelector('.popup')
        popup.innerHTML = `
        <button class="close-popup" onclick="hidePopup()"><i class="fa fa-times-circle-o" aria-hidden="true"></i></button>
        <img src="${book.cover}" alt="${book.name}">
        <h3><span>${book.name}</span></h3>
        <div id="display-avs"><p>Author:<br><span class="author-popup">${book.author}</span></p><p>Votes:<br><span class="votes-popup">${book.votes}</span></p></div>
        <a href="${book.url}" target="_blank"><button class="box"><span>More information</span></button></a>
        `;
        popupContainer.style.display = 'block';
      }
      
      function hidePopup() {
        const popupContainer = document.querySelector('.popup-container')
        popupContainer.style.display = 'none';
      }
      
      document.addEventListener('click', (event) => {
        if (event.target && event.target.closest('.book')) {
          const bookDiv = event.target.closest('.book')
          const book = {
            cover: bookDiv.getAttribute('data-cover'),
            name: bookDiv.getAttribute('data-name'),
            author: bookDiv.getAttribute('data-author'),
            votes: bookDiv.getAttribute('data-votes'),
            url: bookDiv.getAttribute('data-url')
          };
          addPopup(book)
        }
      });
      
      document.addEventListener("DOMContentLoaded", () => {
        fetchData()
      });


      async function fetchData() {
        const url = 'https://hapi-books.p.rapidapi.com/nominees/romance/2020';
        const options = {
          method: 'GET',
          headers: {
            'x-rapidapi-key': 'a14d577b34msh9a81373585e00d6p1e9102jsne23426a18e17',
            'x-rapidapi-host': 'hapi-books.p.rapidapi.com'
          }
        };
      
        try {
          const response = await fetch(url, options);
          const result = await response.json();
          console.log(result);
          displayBooks(result); // Gọi hàm displayBooks với dữ liệu lấy được
        } catch (error) {
          console.error(error);
        }
      }



